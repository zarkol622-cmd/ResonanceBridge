<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Permissions with detailed explanations -->
    <!-- Audio recording for future breath analysis (optional) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" 
        tools:node="remove" /> <!-- Disabled by default -->
    
    <!-- Camera for future attention tracking (optional) -->
    <uses-permission android:name="android.permission.CAMERA"
        tools:node="remove" /> <!-- Disabled by default -->
    
    <!-- Required for audio playback -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:name=".ResonanceBridgeApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResonanceBridge"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- Warning Activity - FIRST screen users see -->
        <activity
            android:name=".ui.WarningActivity"
            android:exported="true"
            android:theme="@style/Theme.ResonanceBridge.Warning">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main app activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ResonanceBridge"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />
        
        <!-- Audio service for background playback -->
        <service
            android:name=".audio.AudioService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
        
        <!-- Research data export service -->
        <service
            android:name=".data.ResearchExportService"
            android:exported="false" />
        
        <!-- Safety: Prevent backup of neural data -->
        <meta-data
            android:name="android.app.backup_disable"
            android:value="true" />
            
        <!-- Privacy policy reference -->
        <meta-data
            android:name="privacy_policy_url"
            android:value="https://github.com/zarkol622-cmd/ResonaceBridge/blob/main/PRIVACY.md" />
    </application>
</manifest>